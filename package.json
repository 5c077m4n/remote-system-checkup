{
	"name": "remote-system-checkup",
	"private": true,
	"scripts": {
		"postinstall": "lerna bootstrap",
		"bootstrap": "lerna bootstrap",
		"build:prod": "lerna run build",
		"start:prod": "lerna run start:prod",
		"test": "lerna run test",
		"clean": "lerna run clean",
		"docker": "docker-compose up --remove-orphans"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/package.json": [
			"sort-package-json",
			"git add"
		],
		"*.{ts,js,css,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts,js}": [
			"eslint --fix",
			"git add"
		]
	},
	"dependencies": {},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.13.0",
		"@typescript-eslint/parser": "^2.13.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^3.1.0",
		"lerna": "^3.20.0",
		"lint-staged": "^9.5.0",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.0",
		"sort-package-json": "^1.32.2",
		"typescript": "^3.7.4"
	}
}
